<resources>
    <style name="Vitreen.Theme" parent="Theme.MaterialComponents">
        <!-- Color palette theming -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryVariant">@color/teal</item>
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal</item>
        <item name="android:colorBackground">@color/dark</item>
        <item name="colorSurface">@color/darker</item>
        <item name="colorError">@color/red</item>
        <item name="colorOnPrimary">@color/darker</item>
        <item name="colorOnSecondary">@color/darker</item>
        <item name="colorOnBackground">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnError">@color/darker</item>
        <item name="colorControlNormal">@color/white</item>
        <!-- Override components style -->
        <item name="materialCardViewStyle">@style/Vitreen.CardView</item>
        <item name="bottomNavigationStyle">@style/Vitreen.BottomNavigationView</item>
        <item name="textInputStyle">@style/Vitreen.TextInputLayout</item>
        <item name="materialButtonStyle">@style/Vitreen.Button</item>
        <item name="borderlessButtonStyle">@style/Vitreen.Button.Text</item>
        <item name="materialButtonOutlinedStyle">@style/Vitreen.Button.Outline</item>
        <item name="imageButtonStyle">@style/Vitreen.ImageButton</item>
        <item name="popupMenuBackground">@color/dark</item>
        <item name="badgeStyle">@style/Vitreen.Badge</item>
        <!-- Font -->
        <item name="fontFamily">@font/roboto</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>
</resources>
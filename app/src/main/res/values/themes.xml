<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="VitreenTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/teal</item>
        <item name="colorPrimaryVariant">@color/teal</item>
        <item name="colorOnPrimary">@color/dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal</item>
        <item name="colorSecondaryVariant">@color/teal</item>
        <item name="colorOnSecondary">@color/dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darker</item>
        <!-- Background color -->
        <item name="android:colorBackground">@color/dark</item>
        <item name="colorOnBackground">@color/white</item>
        <!-- Text related -->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColorHint">@color/white_20</item>
        <item name="colorControlNormal">@color/white_20</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>
        <!-- Widgets style -->
        <item name="editTextStyle">@style/Vitreen.EditText</item>
        <item name="materialButtonStyle">@style/Vitreen.Button</item>
    </style>
</resources>
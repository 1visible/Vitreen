<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- EditText: glassmorphism style -->
    <style name="Vitreen.EditText" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/glass_frame</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- Button: alternative MD style -->
    <style name="Vitreen.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button: link style -->
    <style name="Vitreen.Link" parent="@android:style/Widget.Button">
        <item name="android:background">@color/fui_transparent</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal</item>
    </style>

    <!-- Button: outline style -->
    <style name="Vitreen.Button.Outline" parent="Vitreen.Button">
        <item name="android:background">@drawable/outline_button</item>
        <item name="android:textColor">@color/teal</item>
    </style>

    <!-- Button: error outline style -->
    <style name="Vitreen.Button.Outline.Error" parent="Vitreen.Button">
        <item name="android:background">@drawable/outline_button_error</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- Badge: alternative MD style -->
    <style name="Vitreen.Badge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/teal</item>
        <item name="android:background">@color/teal</item>
    </style>

    <!-- ActionBar: alternative MD style -->
    <style name="Vitreen.ActionBar" parent="@style/Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/darker</item>
        <item name="android:background">@color/darker</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- TextInputLayout: alternative MD style -->
    <style name="Vitreen.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/white_20</item>
        <item name="android:textColorHint">@color/white_20</item>
        <item name="placeholderTextColor">@color/white_20</item>
        <item name="endIconTint">@color/white_20</item>
        <item name="boxBackgroundColor">@color/white_10</item>
        <item name="shapeAppearance">@style/Vitreen.ShapeCorners</item>
    </style>

    <style name="Vitreen.ShapeCorners" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/spacing_sm</item>
    </style>

    <!-- CardView style -->
    <style name="Vitreen.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/Vitreen.ShapeCorners</item>
    </style>
    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSurface">@color/dark</item>
    </style>

</resources>
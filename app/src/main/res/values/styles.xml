<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Button: alternative MD style -->
    <style name="Vitreen.Button" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/rounded_button</item>
        <item name="android:padding">15dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Button: link style -->
    <style name="Vitreen.Link" parent="@android:style/Widget.Button">
        <item name="android:background">@color/fui_transparent</item>
        <item name="android:padding">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal</item>
    </style>

    <!-- Button: outline style -->
    <style name="Vitreen.Button.Outline" parent="Vitreen.Button">
        <item name="android:background">@drawable/outline_button</item>
        <item name="android:textColor">@color/teal</item>
    </style>

    <!-- Button: error outline style -->
    <style name="Vitreen.Button.Outline.Error" parent="Vitreen.Button">
        <item name="android:background">@drawable/outline_button_error</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!-- Badge: alternative MD style -->
    <style name="Vitreen.Badge" parent="@style/Widget.MaterialComponents.Badge">
        <item name="backgroundColor">@color/teal</item>
        <item name="android:background">@color/teal</item>
    </style>

    <!-- ShapeAppearance style -->
    <style name="Vitreen.ShapeAppearance" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/spacing_sm</item>
    </style>

    <!-- CardView style -->
    <style name="Vitreen.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.Card</item>
        <item name="shapeAppearance">@style/Vitreen.ShapeAppearance</item>
    </style>
    <style name="ThemeOverlay.App.Card" parent="">
        <item name="colorSurface">@color/dark</item>
    </style>

    <!-- BottomNavigationView style -->
    <style name="Vitreen.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">@drawable/glass_frame</item>
        <item name="elevation">0dp</item>
        <item name="itemIconTint">@color/navigation_item_color</item>
        <item name="itemTextColor">@color/navigation_item_color</item>
    </style>

    <!-- TextInputLayout style -->
    <style name="Vitreen.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="shapeAppearance">@style/Vitreen.ShapeAppearance</item>
        <item name="shapeAppearanceOverlay">@null</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".fragments.adding.Adding1Fragment">

    <!-- Images slider -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card"
        android:layout_marginBottom="@dimen/spacing_md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Image to show -->
            <ImageView
                android:id="@+id/imageViewProduct"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:srcCompat="@drawable/image_placeholder"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription" />

            <!-- Previous image button -->
            <ImageButton
                android:id="@+id/buttonPreviousImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/icon_angle_left"
                android:padding="@dimen/spacing_md"
                tools:ignore="ContentDescription" />

            <!-- Next image button -->
            <ImageButton
                android:id="@+id/buttonNextImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/icon_angle_right"
                android:padding="@dimen/spacing_md"
                tools:ignore="ContentDescription" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/textViewTitle"
        android:text="@string/placeholder_title"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="@dimen/spacing_sm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewPrice"
        android:text="@string/price"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/teal"
        android:layout_marginBottom="@dimen/spacing_md"
        android:gravity="end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewDescription"
        android:text="@string/product_description"
        android:layout_marginBottom="@dimen/spacing_lg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/further_informations"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/teal"
        android:layout_marginBottom="@dimen/spacing_md"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/textViewCategory"
        android:text="@string/placeholder_category"
        android:drawablePadding="@dimen/spacing_sm"
        android:drawableLeft="@drawable/icon_tree"
        android:drawableStart="@drawable/icon_tree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/textViewLocation"
        android:text="@string/placeholder_location"
        android:drawablePadding="@dimen/spacing_sm"
        android:drawableLeft="@drawable/icon_location"
        android:drawableStart="@drawable/icon_location"
        android:layout_marginTop="@dimen/spacing_sm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/textViewBrand"
        android:text="@string/product_brand"
        android:drawablePadding="@dimen/spacing_sm"
        android:drawableLeft="@drawable/icon_tag"
        android:drawableStart="@drawable/icon_tag"
        android:layout_marginTop="@dimen/spacing_sm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UseCompatTextViewDrawableXml" />

    <TextView
        android:id="@+id/textViewDimensions"
        android:text="@string/product_dimensions"
        android:drawablePadding="@dimen/spacing_sm"
        android:drawableLeft="@drawable/icon_size"
        android:drawableStart="@drawable/icon_size"
        android:layout_marginTop="@dimen/spacing_sm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="UseCompatTextViewDrawableXml" />

</LinearLayout>